extends layout

block content
	div.container.sections-wrapper
		div.row
			div.primary.col-md-4.col-md-offset-4.col-sm-12.col-xs-12
				section.about.section
					div.section-inner
						h2.heading Sign IN :)
						div.content.clearfix
							form(role='form', action="/login",method="post",class="loginform")
								.form-group
									input.form-control(type='text', name="username", placeholder='Enter Username')
								.form-group
									input.form-control(type='password', name="password", placeholder='Password')
								button.btn.btn-cta-primary.pull-right(type='submit') Submit
		div.row
			div.primary.col-md-4.col-md-offset-4.col-sm-12.col-xs-12
				- if(messages && messages.length)
					div.bg-danger.well #{messages}
				div.bg-info.well Load users with 'seed' - login with admin/admin or quinn/quinn
//
	.row
		.col-sm-6.col-md-4.col-md-offset-4
			h1 Login
			form(role='form', action="/login",method="post",class="loginform")
				.form-group
					input.form-control(type='text', name="username", placeholder='Enter Username')
				.form-group
					input.form-control(type='password', name="password", placeholder='Password')
				button.btn.btn-default(type='submit') Submit
				|&nbsp;
				button.btn.btn-primary(type="button") Cancel
	.row
		.col-sm-6.col-md-4.col-md-offset-4.loginform.heavyPad
			br
			- if(messages && messages.length)
				.bg-danger #{messages}
			br
			br
			.bg-info Load users with `seed` - login with admin/admin or quinn/quinn


		 
			
			   
				   
