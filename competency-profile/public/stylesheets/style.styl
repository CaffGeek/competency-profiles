body
	padding-top: 60px;
	padding-bottom: 40px;
	font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

a
	color: #FFFF01;

.sidebar-nav 
	padding: 9px 0;

.navright
	text-align: right;

#status
	height: 35px;
	
#progress
	text-align: center;

.notImplemented
	cursor: not-allowed;

.objective
	position:relative;
	padding:1em 1.5em;
	margin:2em auto;
	color:#fff;
	background:#97C02F;
	overflow:hidden;

 .objectiveSelected 
	position:relative;
	padding:1em 1.5em;
	margin:2em auto;
	color:#fff;
	background:#97C02F;
	overflow:hidden;
	
.objectiveSelected:before
	content:"";
	position:absolute;
	top:0;
	right:0;
	border-width:0 16px 16px 0; /* This trick side-steps a webkit bug */
	border-style:solid;
	border-color:#fff #fff #658E15 #658E15; /* A bit more verbose to work with .rounded too */
	background:#658E15; /* For when also applying a border-radius */
	display:block; width:0; /* Only for Firefox 3.0 damage limitation */
	/* Optional: shadow */
	-webkit-box-shadow:0 1px 1px rgba(0,0,0,0.3), -1px 1px 1px rgba(0,0,0,0.2);
	-moz-box-shadow:0 1px 1px rgba(0,0,0,0.3), -1px 1px 1px rgba(0,0,0,0.2);
	box-shadow:0 1px 1px rgba(0,0,0,0.3), -1px 1px 1px rgba(0,0,0,0.2);
	
.objectiveSelected.blue {background:#53A3B4;}
.objectiveSelected.blue:before {border-color:#fff #fff transparent transparent; background:transparent;}